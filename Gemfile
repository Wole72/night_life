source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'                # Database
gem 'devise'                 # Authentication
#gem 'mini'_magick           # Image resizing
gem 'closure_tree', :git => 'https://github.com/mceachen/closure_tree.git'  
gem 'rdiscount'              # fast c-lib markdown lwnl
gem 'acts_as_markup'         # lwml intergration with active record   
gem 'omniauth'       



# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   "~> 3.1.0"  # Better than CCS
  gem 'coffee-rails', "~> 3.1.0"  # Better than Javascript
  gem 'uglifier'                  # Minifies JS and CSS files
end

gem 'jquery-rails'                # Rails support for the JQuery lib

group :test, :development do
 gem 'rspec-rails'                # BDO style testing semantics
 gem 'rr'                         # Double Ruby mocking framwork
 gem 'factory_girl_rails'          # I hate fixturs and so does Rails
 gem 'pry'                        # Pry console for debugging
end

group :development do
 gem 'wirble'                     # Colorized console
 gem 'haml-rails'                 # Rails generators for HAML
 gem 'rails3-generators'          # Other Rails generators

 gem 'ruby-debug19', :require => 'ruby-debug'
end








